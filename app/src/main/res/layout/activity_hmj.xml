<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HmjActivity">
    <include
        android:id="@+id/toolbar_hmj"
        layout="@layout/submenutoolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_hmj"
        android:layout_above="@id/horizontalScrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp">

            <ImageView
                android:id="@+id/image_hmj"
                android:layout_width="289dp"
                android:layout_height="191dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                app:srcCompat="@drawable/logohmj" />

            <TextView
                android:id="@+id/textview_hmj"
                android:layout_below="@id/image_hmj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/mukta_mahee"
                android:text="@string/string_hmj"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="50dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/kontak_hmj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_hmj"
                android:layout_centerHorizontal="true"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/box2"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/ic_twitter_hmj"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_itwitter" />

                    <TextView
                        android:id="@+id/twitter_hmj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mukta_mahee"
                        android:text="@hmj_unpad"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@id/ic_twitter_hmj"
                        android:layout_marginLeft="10dp" />

                    <ImageView
                        android:id="@+id/ic_instagram_hmj"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_instagram"
                        android:layout_below="@id/ic_twitter_hmj"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/ig_hmj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/twitter_hmj"
                        android:fontFamily="@font/mukta_mahee"
                        android:text="@hmj_unpad"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@id/ic_instagram_hmj"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />

                    <ImageView
                        android:id="@+id/ic_youtube_hmj"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_youtube"
                        android:layout_below="@id/ic_instagram_hmj"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/youtube_hmj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ig_hmj"
                        android:fontFamily="@font/mukta_mahee"
                        android:text="SibiruTV"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@id/ic_youtube_hmj"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />

                    <ImageView
                        android:id="@+id/ic_fb_hmj"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_ifacebook"
                        android:layout_below="@id/ic_youtube_hmj"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/fb_hmj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/youtube_hmj"
                        android:fontFamily="@font/mukta_mahee"
                        android:text="HMJ Fikom Unpad"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@id/ic_fb_hmj"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />

                    <ImageView
                        android:id="@+id/ic_line_hmj"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_iline"
                        android:layout_below="@id/ic_fb_hmj"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/line_hmj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fb_hmj"
                        android:fontFamily="@font/mukta_mahee"
                        android:text="@huq8929b"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@id/ic_line_hmj"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_back"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_back"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_back"
                        app:tint="@color/abu_abu" />

                    <TextView
                        android:id="@+id/text_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_back"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/palanquin_dark"
                        android:lineSpacingExtra="-10dp"
                        android:text="Kembali ke Kuliah"
                        android:textAlignment="center"
                        android:textColor="@color/abu_abu" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_dosen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_dosen"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_dosen"
                        app:tint="@color/biru_tua" />

                    <TextView
                        android:id="@+id/text_dosen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_dosen"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/palanquin_dark"
                        android:text="Dosen"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_kurikulum"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_kurikulum"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_kurikulum"
                        app:tint="@color/biru_tua" />

                    <TextView
                        android:id="@+id/text_kurikulum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_kurikulum"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/palanquin_dark"
                        android:text="Kurikulum"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_fasilitas"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_fasilitas"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_fasilitas"
                        app:tint="@color/biru_tua" />

                    <TextView
                        android:id="@+id/text_fasilitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_fasilitas"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/palanquin_dark"
                        android:text="Fasilitas"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_lulusan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_lulusan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_lulusan"
                        app:tint="@color/biru_tua" />

                    <TextView
                        android:id="@+id/text_prospek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_lulusan"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/palanquin_dark"
                        android:text="Lulusan"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_hmj"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/biru_tua">

                    <ImageView
                        android:id="@+id/icon_hmj"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_hmj"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/text_hmj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_hmj"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/palanquin_dark"
                        android:text="HMJ"
                        android:textColor="@color/white"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>