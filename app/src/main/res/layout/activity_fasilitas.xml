<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FasilitasActivity">
    <include
        android:id="@+id/toolbar_fasilitas"
        layout="@layout/submenutoolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_fasilitas"
        android:layout_above="@id/horizontalScrollView"
        android:paddingHorizontal="60dp"
        android:paddingVertical="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_lab_radio"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laboratorium Radio"
                android:fontFamily="@font/palanquin_dark"
                android:elevation="4dp"
                android:padding="5dp"
                android:background="@drawable/buttonfasilitas"/>

            <Button
                android:id="@+id/button_lab_tv"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laboratorium Televisi"
                android:fontFamily="@font/palanquin_dark"
                android:elevation="4dp"
                android:layout_below="@id/button_lab_radio"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttonfasilitas"/>

            <Button
                android:id="@+id/button_lab_newsroom"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laboratorium News Room"
                android:fontFamily="@font/palanquin_dark"
                android:elevation="4dp"
                android:layout_below="@id/button_lab_tv"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttonfasilitas"/>

            <Button
                android:id="@+id/button_lab_perpus"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laboratorium Perpustakaan"
                android:fontFamily="@font/palanquin_dark"
                android:elevation="4dp"
                android:layout_below="@id/button_lab_newsroom"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttonfasilitas"/>

            <Button
                android:id="@+id/button_lab_cmc"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laboratorium CMC"
                android:fontFamily="@font/palanquin_dark"
                android:elevation="4dp"
                android:layout_below="@id/button_lab_perpus"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttonfasilitas"/>

            <Button
                android:id="@+id/button_lab_humas"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laboratorium Hubungan Masyarakat"
                android:fontFamily="@font/palanquin_dark"
                android:elevation="4dp"
                android:layout_below="@id/button_lab_cmc"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttonfasilitas"/>

            <Button
                android:id="@+id/button_lab_foto"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laboratorium Fotografi"
                android:fontFamily="@font/palanquin_dark"
                android:elevation="4dp"
                android:layout_below="@id/button_lab_humas"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttonfasilitas"/>

            <Button
                android:id="@+id/button_lab_grafika"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laboratorium Grafika"
                android:fontFamily="@font/palanquin_dark"
                android:elevation="4dp"
                android:layout_below="@id/button_lab_foto"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttonfasilitas"/>

        </RelativeLayout>

    </ScrollView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_back"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_back"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_back"
                        app:tint="@color/abu_abu" />

                    <TextView
                        android:id="@+id/text_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_back"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/palanquin_dark"
                        android:lineSpacingExtra="-10dp"
                        android:text="Kembali ke Kuliah"
                        android:textAlignment="center"
                        android:textColor="@color/abu_abu" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_dosen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_dosen"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_dosen"
                        app:tint="@color/biru_tua" />

                    <TextView
                        android:id="@+id/text_dosen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_dosen"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/palanquin_dark"
                        android:text="Dosen"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_kurikulum"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_kurikulum"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_kurikulum"
                        app:tint="@color/biru_tua" />

                    <TextView
                        android:id="@+id/text_kurikulum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_kurikulum"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/palanquin_dark"
                        android:text="Kurikulum"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_fasilitas"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/biru_tua">

                    <ImageView
                        android:id="@+id/icon_fasilitas"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_fasilitas"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/text_fasilitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_fasilitas"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/palanquin_dark"
                        android:text="Fasilitas"
                        android:textColor="@color/white"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_lulusan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_lulusan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_lulusan"
                        app:tint="@color/biru_tua" />

                    <TextView
                        android:id="@+id/text_prospek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_lulusan"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/palanquin_dark"
                        android:text="Lulusan" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_hmj"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_hmj"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_hmj"
                        app:tint="@color/biru_tua" />

                    <TextView
                        android:id="@+id/text_hmj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_hmj"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/palanquin_dark"
                        android:text="HMJ" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>